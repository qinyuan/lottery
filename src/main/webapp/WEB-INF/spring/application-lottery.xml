<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="lotNumberFormat" class="java.text.DecimalFormat">
        <constructor-arg value="000000"/>
    </bean>
    <bean class="com.qinyuan15.lottery.mvc.activity.DualColoredBallCrawlers" init-method="init">
        <constructor-arg ref="lotNumberFormat"/>
        <property name="crawlers">
            <list>
                <bean class="com.qinyuan15.lottery.mvc.activity.BaiduLecaiCrawler"/>
                <bean class="com.qinyuan15.lottery.mvc.activity.ZhcwCrawler"/>
            </list>
        </property>
    </bean>
</beans>
