<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.qinyuan15.lottery.mvc.dao">
    <class name="NavigationLink" table="navigation_link">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="title"/>
        <property name="href"/>
    </class>
    <class name="IndexImage" table="index_image">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="path"/>
        <property name="backPath" column="back_path"/>
        <property name="rowIndex" column="row_index"/>
    </class>
    <class name="IndexImageMap" table="index_image_map">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="imageId" column="image_id"/>
        <property name="xStart" column="x_start"/>
        <property name="yStart" column="y_start"/>
        <property name="xEnd" column="x_end"/>
        <property name="yEnd" column="y_end"/>
        <property name="href"/>
        <property name="comment"/>
    </class>
</hibernate-mapping>
